<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>床位管理</title>
    <script src="../../Scripts/jquery-3.4.1.js"></script>
    <script src="../../Source/packages/layui/layui.js"></script>
    <script src="../../Scripts/Project/Bed/bed.js"></script>
    <link rel="stylesheet" href="../../Source/packages/layui/css/layui.css">
    <link rel="stylesheet" href="../../Source/packages/layuiadmin/style/admin.css" media="all">
</head>
<body>
    <div class="layui-fluid">
        <div class="layui-row layui-col-space15">
            <div class="layui-col-md16">
                <div class="layui-card">
                    <div class="layui-card-header">床位管理</div>
                    <div class="layui-card-body">

                        <blockquote class="layui-elem-quote layui-quote-nm">
                            <form class="layui-form">
                                <div class="layui-form-item">
                                    <div class="layui-inline">
                                        <label class="layui-form-label">病床位查询</label>
                                        <div class="layui-input-block">
                                            <input type="text" name="input" id="input" lay-verify="required" style="width:300px;" placeholder="请输入患者姓名，支持模糊查询" autocomplete="off" class="layui-input">
                                        </div>
                                    </div>
                                    <button type="button" class="layui-btn layui-btn-normal" id="search">
                                        <i class="layui-icon">&#xe615;</i>
                                    </button>
                                </div>
                            </form>
                        </blockquote>
                        <blockquote class="layui-elem-quote layui-quote-nm">
                            <!--床位的表格-->
                            <table id="table_bed" lay-filter="table_bed"></table>
                        </blockquote>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--layui模版引擎文档(laytpl)-->
    <!--修改表格的状态列-->
    <script type="text/html" id="statusbar">
        {{# if(d.IsFree === '已占用'){ }}
        <span style="color: #FF0000">已占用</span>
        {{#  } }}
        {{# if(d.IsFree === '空闲'){ }}
        <span style="color: #68EE68">空闲</span>
        {{#  } }}
    </script>
</body>
</html>
