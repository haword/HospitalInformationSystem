<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>科室管理</title>
    <script src="../../Scripts/jquery-3.4.1.js"></script>
    <script src="../../Source/packages/layui/layui.js"></script>
    <script src="../../Scripts/Project/Department/department.js"></script>
    <link rel="stylesheet" href="../../Source/packages/layui/css/layui.css">
</head>
<body>
    <div class="layui-fluid">
        <div class="layui-row layui-col-space15">
            <div class="layui-col-md16">
                <div class="layui-card">
                    <div class="layui-card-header">科室管理</div>
                    <div class="layui-card-body">

                        <blockquote class="layui-elem-quote layui-quote-nm">
                            <button class="layui-btn" onclick="btn_addDepartment()">新增科室</button>
                        </blockquote>
                        <blockquote class="layui-elem-quote layui-quote-nm">
                            <form class="layui-form">
                                <div class="layui-form-item">
                                    <div class="layui-inline">
                                        <label class="layui-form-label">科室查询</label>
                                        <div class="layui-input-block">
                                            <input type="text" name="input" id="input" lay-verify="required" style="width:400px;" placeholder="请输入待查询科室名，支持模糊查询" autocomplete="off" class="layui-input">
                                        </div>
                                    </div>
                                    <button type="button" class="layui-btn layui-btn-normal" id="search">
                                        <i class="layui-icon">&#xe615;</i>
                                    </button>
                                </div>
                            </form>
                        </blockquote>
                        <blockquote class="layui-elem-quote layui-quote-nm">
                            <!--科室的表格-->
                            <table id="table_department" lay-filter="table_department"></table>
                        </blockquote>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--新增科室的弹窗-->
    <div style="padding-left:20px;padding-right:20px;padding-top:20px" id="div_addDepartment" hidden>
        <form class="layui-form">
            <div class="layui-form-item">
                <label class="layui-form-label"><span style="color:red">*</span>科室名</label>
                <div class="layui-input-block">
                    <input type="text" name="name" id="name" lay-verify="required" placeholder="请输入科室名" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label"><span style="color:red">*</span>床位数</label>
                <div class="layui-input-block">
                    <input type="text" name="bedNum" id="bedNum" lay-verify="required|number" placeholder="请输入床位数" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label"><span style="color:red">*</span>床位费</label>
                <div class="layui-input-inline">
                    <input type="text" name="cost" id="cost" lay-verify="required|cost" placeholder="请输入床位费" autocomplete="off" class="layui-input">
                </div>
            </div>

            <!--以下属性不显示，便于更新-->
            <div class="layui-form-item" hidden>
                <textarea id="freeBedNum" name="freeBedNum"></textarea>
                <textarea id="departmentId" name="id"></textarea>
            </div>
        </form>
    </div>
</body>
</html>
