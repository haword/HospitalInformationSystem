<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>账单管理</title>
    <script src="../../Scripts/jquery-3.4.1.js"></script>
    <script src="../../Source/packages/layui/layui.js"></script>
    <script src="../../Scripts/Project/Bill/bill.js"></script>
    <link rel="stylesheet" href="../../Source/packages/layui/css/layui.css">
    <link rel="stylesheet" href="../../Source/packages/layuiadmin/style/admin.css" media="all">
</head>
<body>
    <div class="layui-fluid">
        <div class="layui-row layui-col-space15">
            <div class="layui-col-md16">
                <div class="layui-card">
                    <div class="layui-card-header">账单管理</div>
                    <div class="layui-card-body">

                        <blockquote class="layui-elem-quote layui-quote-nm">
                            <button class="layui-btn layui-btn-radius layui-btn-danger" onclick="btn_exportExcel()"><i class="layui-icon">&#xe601;</i>统计报表</button>
                        </blockquote>

                        <blockquote class="layui-elem-quote layui-quote-nm">
                            <form class="layui-form">
                                <div class="layui-form-item">
                                    <div class="layui-inline">
                                        <label class="layui-form-label">账单查询</label>
                                        <div class="layui-input-block">
                                            <input type="text" name="input" id="input" lay-verify="required" style="width:300px;" placeholder="请输入患者姓名，支持模糊查询" autocomplete="off" class="layui-input">
                                        </div>
                                    </div>
                                    <button type="button" class="layui-btn layui-btn-normal" id="search">
                                        <i class="layui-icon">&#xe615;</i>
                                    </button>
                                </div>
                            </form>
                        </blockquote>
                        <blockquote class="layui-elem-quote layui-quote-nm">
                            <!--账单的表格-->
                            <table id="table_bill" lay-filter="table_bill"></table>
                        </blockquote>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--layui模版引擎文档(laytpl)-->
    <!--修改表格的状态列-->
    <script type="text/html" id="statusbar">
        {{# if(d.Status === '待支付'){ }}
        <span style="color: #CD2626">待支付</span>
        {{#  } }}
        {{# if(d.Status === '已支付'){ }}
        <span style="color: #98FB98">已支付</span>
        {{#  } }}
    </script>

    <!--layui模版引擎文档(laytpl)-->
    <!--修改表格的工具列-->
    <script type="text/html" id="toolbar">
        {{# if(d.Type === '押金' && d.Status === '已支付'){ }}
        <a class="operation" lay-event="print" title="打印收据">
            <i class="layui-icon layui-icon-print"></i>打印
        </a>
        <a class="operation" style="margin-left:10px;" lay-event="cancel" title="作废收据">
            <i class="layui-icon layui-icon-close"></i>作废
        </a>
        {{#  } }}
    </script>
</body>
</html>

